<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    android:orientation="vertical">

    <com.shizhefei.view.largeimage.LargeImageView
        android:id="@+id/big_img_pre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.demo.swt.mystudyappshop.Util.glideprogress.CircleProgressView
        android:id="@+id/cir_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:progress="0"
        app:cpv_progressNormalColor="@color/transparent10"
        app:cpv_progressReachColor="@color/transparent90_white"
        app:cpv_progressStyle="FillInnerArc"
        app:cpv_progressTextColor="@color/sfw_red"
        app:cpv_progressTextSize="13sp"
        app:cpv_progressTextVisible="false"/>
</RelativeLayout>