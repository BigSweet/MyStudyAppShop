<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wuyuitemlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:text="我是名字" />

                <TextView
                    android:id="@+id/school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/gray1"
                    android:textSize="12sp"
                    tools:text="我是来自什么学校" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/wuyu_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textSize="17sp"
            tools:text="我是内容" />


        <com.demo.swt.mystudyappshop.Wight.CstImage
            android:id="@+id/cstimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">


        </com.demo.swt.mystudyappshop.Wight.CstImage>

        <!--<LinearLayout
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:background="@color/gray1"
            android:orientation="horizontal"></LinearLayout>-->

        <!--  <com.demo.swt.mystudyappshop.Wight.WordWrapView
              android:id="@+id/wordview"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="37dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="10dp"
              android:background="@color/app_bg">-->

        <LinearLayout
            android:id="@+id/layoutzan"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/app_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/friend_icon_zan" />

            <TextView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


        <!--    </com.demo.swt.mystudyappshop.Wight.WordWrapView>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/commentzan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="10dp"
            android:background="@color/app_bg">

        </android.support.v7.widget.RecyclerView>

        <View style="@style/HorizontalLineq3" />

    </LinearLayout>

</LinearLayout>